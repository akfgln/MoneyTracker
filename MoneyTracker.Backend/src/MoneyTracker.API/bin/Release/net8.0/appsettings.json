{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseSettings": {
    "Provider": "SqlServer"
  },
  "ConnectionStrings": {
    "MySqlConnection": "Server=localhost;Port=3306;Database=MoneyTrackerDb;Uid=root;Pwd=YourMySqlPassword123!;CharSet=utf8mb4;",
    "SqlServerConnection": "Server=localhost,1433;Database=MoneyTrackerDb;User Id=sa;Password=YourSqlServerPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true;"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretJwtKeyThatShouldBeAtLeast32CharactersLongForSecurity123!",
    "Issuer": "MoneyTracker.API",
    "Audience": "MoneyTracker.Client",
    "ExpirationInHours": 24,
    "RefreshTokenExpirationInDays": 30,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "RequireExpirationTime": true,
    "ClockSkewMinutes": 5
  },
  "Jwt": {
    "Key": "YourSuperSecretJwtKeyThatShouldBeAtLeast32CharactersLong12345",
    "Issuer": "MoneyTrackerAPI",
    "Audience": "MoneyTrackerClient",
    "ExpiryInMinutes": 60
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/moneytracker-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}